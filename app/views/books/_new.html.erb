<div>
<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<table class="table table-striped">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th>
        <sapn><%= user.name%></sapn>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <span><%= user.introduction%></span>
      </th>
    </tr>
  </tbody>

</table>

<%= link_to "歯車マークユーザーの編集ページ", edit_user_path(user) %>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>