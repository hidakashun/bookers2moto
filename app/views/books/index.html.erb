<p id="notice"></p>
<h1>books/indexいろんな人の投稿一覧</h1>

<%= render 'new', user:@user, book:@book %>

<h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
      <td>
        <span><%= link_to book.title, book_path(book.id) %></span>
      </td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
<% end %>
</table>