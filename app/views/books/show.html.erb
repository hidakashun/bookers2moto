<h1>自分投稿後の詳細ページ</h1>

<%= render 'new', books: @books, book: @book %>

<h2>Book detail</h2>
<table class="table table-striped">
  <tbody>

    <tr>
      <td>自分の画像と自分の名前</td>
      <td>
        <span><%= @book.title %></span>
      </td>
      <td>
        <span><%= @book.body %></span>
      </td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    </tr>

  </tbody>
</table>