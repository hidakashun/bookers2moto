<div class="container"><!--外枠-->
  <div class="row"><!--外枠-->
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0"><!--外枠-->
      <h2>Sign up</h2><!--外枠-->
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"name"%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"password_confirm" %>
  </div>

  <div class="actions"><!--サインアップボタン完成-->
    <%= f.submit "Sign up", class:"btn btn-sm btn-success" %><!--サインアップボタン完成-->
  </div><!--サインアップボタン完成-->
<% end %>

<%= render "devise/shared/links" %><!--外枠-->
    </div><!--外枠-->
  </div><!--外枠-->
</div><!--外枠-->


