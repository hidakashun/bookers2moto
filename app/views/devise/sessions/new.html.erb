
<p id="notice"></p>
<div class="container"><!--外枠-->
  <div class="row"><!--外枠-->
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0"><!--外枠-->
      <h2>Log in</h2><!--外枠-->


<%= form_with model: @user, url: user_session_path do |f| %>



  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"name" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions"><!--ログインボタン完成-->
    <%= f.submit "Log in", class:"btn btn-sm btn-primary" %><!--ログインボタン完成-->
  </div>  <!--ログインボタン完成-->
<% end %>


<%= render "devise/shared/links" %><!--外枠-->
    </div><!--外枠-->
  </div><!--外枠-->
</div><!--外枠-->