<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<p id="notice"></p>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, id:"inputIntroduction", placeholder:"Introduction"%>
  <%= f.submit "Update User" %>
<% end %>