<h1>ユーザー一覧app/views/users/index.html.erb</h1>

<%= render 'books/new', user: @user %>

<h2>Users</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(80, 80) %></td>
      <td><%= user.name %></td>
      <td>
        <span><%= link_to "Show", user_path(user.id) %></span>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>