<h1>ログインして開く最初のページ</h1>

<%= render 'books/new', books: @books, book: @book %>

<h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @books.each do |book| %>

      <tr>
        <td>
          <%= image_tag book.user.get_profile_image(100,100) %>
        </td>
        <td>
          <span><%= book.title %></span>
        </td>
        <td>
          <span><%= book.body %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>